@model List<Practica_MVC.Models.ViewModels.TablaUsuarioVM>

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<div class="row">
    <div class="col-lg-3 col-lg-offset-9">
        <a class=" btn btn-primary" href="~/Usuarios/Nuevo">Nuevo</a>
    </div>
</div>

<br />

<div class="row">
    <div class="col">
        <table class="table table-striped">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>

            @foreach (var oUser in Model)
            {
                <tr>
                    <td>@oUser.id</td>
                    <td>@oUser.name</td>
                    <td>@oUser.apellido</td>
                    <td>@oUser.correo</td>
                    <td>
                        <input type="button" onclick="document.location.href = '@Url.Content("~/Usuarios/Edit/"+oUser.id)'" class="btn btn-default" value="Editar" />
                        <input type="button" onclick="jsDelete(@oUser.id);" class="btn btn-danger" value="Eliminar" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@section scripts{
<script>

    function jsDelete(id) {

        if (confirm("Seguro quiere eliminarlo?")) {

            let url = "@Url.Content("~/Usuarios/Delete")" + "/"+id;

            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/Usuarios/")";
                } else {
                    alert("Ocurrió un error");
                }

            });

        }
    }

</script>

}







